<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:stretchColumns="*"
    android:layout_weight="1"
    >

    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chuyen doi nam duong lich"
            android:textSize="24dp"
            android:textColor="#FFFF00"
            android:gravity="center"
            android:background="#FF0000"
            android:layout_weight="1">
        </TextView>
    </TableRow>
    <TableRow>

        <TextView
            android:layout_width="197dp"
            android:layout_weight="1"
            android:text="Nam duong lich:"
            android:textSize="24dp">

        </TextView>
        <EditText
            android:id="@+id/edtnamduonglich"
            android:hint="Nhap nam">

        </EditText>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnchuyendoi"
            android:layout_column="1"
            android:layout_weight="1"
            android:backgroundTint="#A9A9A9"
            android:text="Chuyen doi"
            android:textColor="@color/black"
            android:textSize="24dp">

        </Button>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="197dp"
            android:layout_weight="1"
            android:text="Nam am lich:"
            android:textSize="24dp">

        </TextView>
        <EditText
            android:id="@+id/edtnamamlich">

        </EditText>
    </TableRow>

</TableLayout>